{
  "name": "edamame",
  "version": "0.1.0",
  "main": "server/index.js",
  "repository": "https://github.com/harakeke-2019/edamame.git",
  "bugs": "https://github.com/harakeke-2019/edamame/issues",
  "author": "EDA",
  "license": "ISC",
  "scripts": {
    "start": "concurrently \"node server\" \"webpack --watch\"",
    "dev": "node server & webpack --watch",
    "client": "webpack-dev-server --hot --inline",
    "server": "node server",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "updateDb": "rm dev.sqlite3 && yarn knex migrate:latest && yarn knex seed:run",
    "test": "jest --watchAll"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "jest": {
    "setupFiles": [
      "./tests/setup.js"
    ]
  },
  "dependencies": {
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "knex": "^0.16.3",
    "path": "^0.12.7",
    "react-tabbordion": "^1.0.4",
    "sqlite3": "^4.0.6",
    "superagent": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  }
}
